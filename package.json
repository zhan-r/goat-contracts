{
  "name": "goat-contracts",
  "license": "Apache License 2.0",
  "author": "Goat Foundation",
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.80.0",
    "@graphprotocol/graph-ts": "^0.35.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomiclabs/hardhat-solhint": "^4.0.1",
    "hardhat": "^2.22.15",
    "@types/yargs": "^17.0.32",
    "ethers": "^6.13.3",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-solidity": "^1.4.1",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "btc-script-factory": "github:GOATNetwork/btc-script-factory#main"
  },
  "scripts": {
    "fmt:check": "prettier --check .",
    "fmt": "prettier --write .",
    "lint": "hardhat check",
    "compile": "hardhat compile",
    "build": "hardhat compile",
    "test": "hardhat test",
    "pregenesis": "go version && docker compose down && docker compose up -d --wait",
    "genesis": "hardhat compile && hardhat create:genesis --network genesis --force true",
    "deploy-locking": "hardhat run scripts/deploy-locking.ts --network localhost",
    "codegen": "graph codegen",
    "compile-graph": "mustache subgraph/testnet.json subgraph/subgraph.yaml.template > subgraph.yaml && graph codegen & graph build",
    "compile-graph:devnet": "npx mustache subgraph/devnet.json subgraph/subgraph.yaml.template > subgraph.yaml && npx graph codegen & npx graph build",
    "compile-graph:devnet-all": "npx hardhat compile && npx mustache subgraph/devnet.json subgraph/subgraph.yaml.template > subgraph.yaml && npx graph codegen && npx graph build",
    "deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ Bridge",
    "create-local": "graph create --node http://localhost:8020/ Bridge",
    "create-local:lock": "graph create --node http://localhost:8020/ Locking",
    "remove-local": "graph remove --node http://localhost:8020/ Bridge",
    "remove-local:lock": "graph remove --node http://localhost:8020/ Locking",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 Bridge",
    "deploy-local:lock": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 Locking",
    "start-graph-node": "cd subgraph && docker-compose up -d",
    "stop-graph-node": "cd subgraph && docker-compose down",
    "clean-graph-node": "cd subgraph && docker-compose down && sudo rm -rf /mnt/data/graph/",
    "postgenesis": "docker compose down"
  },
  "prettier": {
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-solidity",
      "prettier-plugin-organize-imports"
    ]
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "onFail": "error"
    },
    "packageManager": {
      "name": "npm",
      "onFail": "error"
    }
  }
}
